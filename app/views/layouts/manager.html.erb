  .icon-unfold{top:-1px;}
</style>

<script>
  $(function(){
    //菜单隐藏展开
    $('.vtitle').click(function(){
      if(!$(this).hasClass("active")){
        $('.vcon').slideUp();
        $('.vcon').eq($('.vtitle').index($(this))).slideDown();
        $(this).addClass('active').siblings().removeClass("active");
      }

    });

    $('.menu_body >li >a').click(function(){
      $('.menu_body >li >a').removeClass('on');
      $(this).addClass('on');
    });

  });
</script>
