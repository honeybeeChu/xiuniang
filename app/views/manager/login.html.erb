<div  class="box clearfix">
  <form action="/manager/loginCheck" method="get">
    <div class=" login_left fl">
      <div style="padding-top:20px;">
        <%= image_tag "manager/ico.png",:height => '190px',:width => '150px' %>
      </div>
      <p style="padding-top:10px;">绣娘营销管理平台</p>
    </div>

    <div class="login_right  fl">
      <div style="margin-top:20px;">登&nbsp;陆</div>
      <div class="row mt15" >
        <input type="text"  size="25" value=""  tabindex="1" class="required" name="username" id="username" style="color:#000;" onfocus="if(value=='账号'){$(this).css('color','#000');value=''}" onblur="if(value==''){$(this).css('color','gray');value='账号'}">
      </div>
      </br>
      <div class="row">
        <input type="password"  size="25" value="密码"  tabindex="2" class="required password" name="password" id="password" style="color:#333;"  onfocus="if(value=='密码'){$(this).css('color','#000');value=''}" onblur="if(value==''){$(this).css('color','gray');value='密码'}">
      </div>
      </br></br>
      <div class="row btn-row"  >
        <input type="submit" value="登 录"  class="btn-submit"  id="loginBtn">
      </div>
    </div>
  </form>
</div>