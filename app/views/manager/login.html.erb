<div  class="box clearfix">
  <form action="/manager/loginCheck" method="get">
    <div class=" login_left fl">
      <div style="padding-top:20px;">
        <%= image_tag "manager/ico.png",:height => '190px',:width => '150px' %>
      </div>
      <p style="padding-top:10px;">绣娘营销管理平台</p>
    </div>

    <div class="login_right  fl">
      <div style="margin-top:20px;">登&nbsp;陆</div>
      <div class="row mt15" >
        <input type="text"  size="25" value="" tabindex="1" placeholder="账号" class="required" name="username" id="username" style="color:#333;" onfocus="if(value=='账号'){this.style.color='#000';value=''}">
      </div>
      </br>
      <div class="row">
        <input type="password"  size="25" value="" tabindex="2" placeholder="密码" tabindex="2" class="required password" name="password" id="password" style="color:#333;"  onfocus="if(value=='密码'){this.style.color='#000';value=''}">
      </div>
      </br></br>
      <div class="row btn-row"  >
        <input type="submit" value="登 录"  tabindex="3" class="btn-submit"  id="loginBtn">
      </div>
    </div>
  </form>
</div>

<script>
  $(function(){
    //菜单隐藏展开
    $("#username").blur(function(){

      if($(this).value==''){
        $(this).css("color","#333");
        value='账号';
      }

    });

    $("#password").blur(function(){

      if($(this).value==''){
        $(this).css("color","#333");
        value='密码';
      }

    });




  });

</script>

