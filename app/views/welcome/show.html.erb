<%= content_for :css do %>
    <%= stylesheet_link_tag 'welcome/show', 'data-turbolinks-track' => true %>
<% end %>
<%= content_for :js do %>
    <%= javascript_include_tag 'http://api.map.baidu.com/api?v=2.0&ak=L6tV0zhkiNFQnuYIWdIC39wcuHMRR5ML&s=1','data-turbolinks-track' => false %>
<% end %>
<style>
  #l-map {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
  }
</style>
<div class="u_body">
  <div id="sdetail_box">
    <header class="u_header" style="z-index:100;">

      <%	if @storeName != nil and  @storeName != ""%>
          <span class="overflow"><%= @storeName %></span>
      <% else %>
          <span class="overflow">绣娘丝绸</span>
      <% end %>

      <a class="icon l icon3" href="javascript:history.go(-1);"></a>
    </header>

    <div id="l-map" style="height:100%;min-height: 100%;">

      <script type="text/javascript">
        var map = new BMap.Map("l-map");
        // 创建地图实例
        var point = new BMap.Point(<%=@log %>,<%=@lat %>);  // 创建点坐标
        map.centerAndZoom(point, 15);                 // 初始化地图，设置中心点坐标和地图级别
        var marker = new BMap.Marker(point);        // 创建标注
        map.addOverlay(marker);


      </script>

    </div>

  </div>
</div>

