<%= content_for :css do %>
    <%= stylesheet_link_tag 'welcome/show', 'data-turbolinks-track' => true %>
<% end %>
<%= content_for :js do %>
    <%= javascript_include_tag 'http://api.map.baidu.com/api?v=2.0&ak=L6tV0zhkiNFQnuYIWdIC39wcuHMRR5ML&s=1','data-turbolinks-track' => false %>
<% end %>
<style>
  #l-map {
    position: absolute;
    top: 0;
    left: 0;
    display: block;
    width: 100%;
    height: 100%;
  }
</style>
<div class="u_body">
  <div id="sdetail_box">
    <header class="u_header" style="z-index:100;">
      <%	if @storeName != nil and  @storeName != ""%>
          <span class="overflow"><%= @storeName %></span>
      <% else %>
          <span class="overflow">绣娘丝绸</span>
      <% end %>

      <a class="icon l icon3" href="javascript:history.go(-1);"></a>
    </header>

    <div id="l-map" style="height:100%;min-height: 100%;">
      <script type="text/javascript">
        // 百度地图API功能
        var map = new BMap.Map("l-map");
        map.centerAndZoom(new BMap.Point(<%=@log %>,<%=@lat %>),12);
        var output = "驾车需要";
        var searchComplete = function (results){
          if (transit.getStatus() != BMAP_STATUS_SUCCESS){
            return ;
          }
          var plan = results.getPlan(0);
          output += plan.getDuration(true) + "\n";                //获取时间
          output += "总路程为：" ;
          output += plan.getDistance(true) + "\n";             //获取距离
        }
        var transit = new BMap.DrivingRoute(map, {renderOptions: {map: map},
          onSearchComplete: searchComplete,
          onPolylinesSet: function(){
            setTimeout(function(){alert(output)},"1000");
          }});

        transit.search(new BMap.Point(<%=@log %>,<%=@lat %>),
            new BMap.Point(<%=@store.longitude %>,<%=@store.latitude %>));

      </script>

    </div>
  </div>
</div>

